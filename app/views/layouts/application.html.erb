	function window_width_check() {
		var width = $(window).width();
		if (width < 800) {
			$("#intro_page").attr("src", "/assets/intro/intro_page_800.png");
			$("#review_top").attr("src", "/assets/review/review_top_800.png");
			$("#review_bottom").attr("src", "/assets/review/review_bottom_800.png");
			$("#third_top").attr("src", "/assets/third/third_top_800.png");
			$("#third_bottom").attr("src", "/assets/third/third_bottom_800.png");
		}
		else if (width > 1100) {
			$("#review_top").attr("src", "/assets/review/review_top_1280.png");
			$("#review_bottom").attr("src", "/assets/review/review_bottom_1280.png");
			$("#third_top").attr("src", "/assets/third/third_top_1280.png");
			$("#third_bottom").attr("src", "/assets/third/third_bottom_1280.png");
		}
		else {
			$("#intro_page").attr("src", "/assets/intro/intro_page.png");
			$("#review_top").attr("src", "/assets/review/review_top.png");
			$("#review_bottom").attr("src", "/assets/review/review_bottom.png");
			$("#third_top").attr("src", "/assets/third/third_top.png");
			$("#third_bottom").attr("src", "/assets/third/third_bottom.png");
		}
	}
	window_width_check();
	$(window).resize(function(){
		window_width_check();
	}).resize();
